    <div class="container">
        <div class="login-via">
            <div class="login-via-title">ĐĂNG NHẬP BẰNG</div>
            <button id="fb-login-btn" class="btn btn-primary">
                <a href="/auth/facebook">Facebook</a>
            </button>
            <br />
            <button id="gg-login-btn" class="btn btn-danger">
                <a href="/auth/google">Google</a>
            </button>
        </div>
        <h2><span>HOẶC</span></h2>

        <div class="main-area row">
            <div class="login-area col-md col-sm-12">
                <form id="form-login" action="/login" method="POST">
                    <div class="area-title">ĐĂNG NHẬP</div>
                    <div class="input-row">
                        <span class="icon-input">
                            <i class="far fa-envelope"></i>
                        </span>
                        <input type="email" id="email" placeholder="Email của bạn" />
                    </div>
                    <div class="input-row">
                        <span class="icon-input">
                            <i class="far fa-lock-alt"></i>
                        </span>
                        <input type="login-password" id="password" placeholder="Nhập mật khẩu" />
                    </div>
                    <input id="btn-login" class="btn btn-outline-dark" type="submit" value="Đăng nhập" />
                </form>
                <a id="forget-pass" href="">Quên mật khẩu ?</a>
            </div>

            <div class="register-area col-md col-sm-12">
                <form id="form-register" action="/signup" method="POST">
                    <div class="area-title">ĐĂNG KÝ</div>
                    <div class="input-row">
                        <span class="icon-input">
                            <i class="far fa-user"></i>
                        </span>
                        <input type="text" id="fullname" placeholder="Họ và tên" />
                    </div>
                    <div class="input-row">
                        <span class="icon-input">
                            <i class="far fa-user-circle"></i>
                        </span>
                        <input type="text" id="username" placeholder="User name" />
                    </div>
                    <div class="input-row">
                        <span class="icon-input">
                            <i class="far fa-envelope"></i>
                        </span>
                        <input type="email" id="email" placeholder="Email của bạn" />
                    </div>
                    <div class="input-row">
                        <span class="icon-input input-group-addon">
                            <i class="far fa-phone-alt"></i>
                        </span>
                        <input type="text" id="phone" placeholder="Số điện thoại của bạn" />
                    </div>
                    <div class="input-row">
                        <span class="icon-input">
                            <i class="far fa-lock-alt"></i>
                        </span>
                        <input type="password" id="signup-password" placeholder="Mật khẩu" />
                    </div>
                    <div class="input-row">
                        <span class="icon-input">
                            <i class="far fa-lock-alt"></i>
                        </span>
                        <input type="password" id="password-again" placeholder="Nhập lại mật khẩu" />
                    </div>

                    <input id="btn-register" class="btn btn-outline-dark" type="submit" value="Đăng ký" />
                </form>
            </div>
        </div>
