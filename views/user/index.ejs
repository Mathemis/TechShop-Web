                                                </button>
                                                <button onclick="location.href=''" type="button" class="card-btn-cart">
                                                    <i class="fal fa-shopping-cart"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }} %>
                            <!-- Card end -->
