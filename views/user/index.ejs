                                    </div>
                                    <div class="card-body rating-stars">
                                        <ul class="rating">
                                            <% var rateInt = parseInt(topSoldManHinh[i].rating); %>
                                            <% for (var j = 0; j < rateInt; ++j) { %>
                                                <li><i class="fas fa-star"></i></li>
                                            <% } %>
                                            <% if (topSoldManHinh[i].rating > rateInt) { ++rateInt; %>
                                                <li><i class="fas fa-star-half-alt"></i></li>
                                            <% } %>        
                                            <% while (rateInt < 5) { ++rateInt; %>
                                                <li><i class="far fa-star"></i></li>
                                            <% } %>                       
                                        </ul>
                                    </div>
                                    <a href="/product/<%= topSoldManHinh[i].id %>" class="card-body card-product-name">
                                        <%= topSoldManHinh[i].name %>
                                    </a>
                                    <div class="card-body">
                                        <div class="d-flex align-items-end">
                                            <div class="price-box">
                                                <span class="card-price">
                                                    <%= (topSoldManHinh[i].price*(100-topSoldManHinh[i].promo)/100).toLocaleString('vi',{style:'currency',currency:'VND'}) %>
                                                </span>
                                                <% if (topSoldManHinh[i].promo !== 0) { %>
                                                    <span class="card-old-price">
                                                        <%= topSoldManHinh[i].price.toLocaleString('vi',{style:'currency',currency:'VND'}) %>
                                                    </span>
                                                <% } %>
                                            </div>
                                            <div class="flex-fill d-flex justify-content-end">
                                                <button type="button" class="card-btn-wish" name="btn-like-<%= topSoldManHinh[i].id %>">
