<script>
	
	var myvar;
	function affect()
	{
		var x= document.getElementById("opt").style.opacity;
		if (parseFloat(x)==1)
		{
			clearInterval(myvar);
			return;
		}
		document.getElementById("opt").style.opacity= parseFloat(x)+0.1;
	}
	function no()
	{
