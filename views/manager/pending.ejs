<body>
<div style="height:100%;">
	<div class="d_logo t_logo">
			<img src="/images/img/logo.png"></img>
			</div>
	<div id="nav" class="d_navi t_navi" >
		
	</div>
	<!--<div valign="bottom" class="footer">powered by TEAM10</div>	-->
	<div style="height:100vh;width:500px;float:left;">
		<div id="hd" class="d_header t_header">
			
		</div>
		<div class="d_content t_content" >
			<div id="opt" style="visibility:hidden;width:15%;background-color:#DDDDDD;float:right;clear:both;top:0%;right:0%;position:absolute;">
				<div>tài khoản</div>
				<div style="width:100%;border-top-style:solid;border-width:1px;"></div>
				<div style="-webkit-user-select: none" onclick="window.location.href = 'logout';">đăng xuất</div>
			</div>
			<div style="float:left;float:left;border-color:#CCCCCC;border-width:1px;height:40px;">
			Sắp xếp:
			<select onchange="sort()" style="color:#999999;height:100%;color:black;"  id="sortby">
				<option value="1">Ngày tháng</option>
				<option value="2">Tổng giá trị</option>
				
			</select>
			</div>
			
			<table class="table" style="">
			<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Ngày đặt hàng</th>
				<th scope="col">Địa chỉ</th>
				<th scope="col">Tổng giá trị</th>
				<th scope="col">thao tác</th>
			</tr> 
			</thead>
			<tbody id="tb">
				<tr id="row" style="visibility:hidden;height:0%;overflow:hidden;">
					<th scope="row">1</th>
					<td></td>
					<td></td>
					<td></td>
					<td>
						<div class="btnrow" style="background-color:#f02e41;" onclick="process(this)">xử lý</div>
						<div class="btnrow" style="background-color:#06993c;" onclick="detail(this)">chi tiết</div>
					</td>
				</tr>
			</tbody>
			</table>
			
		</div>
	</div>
</div>
<script src="/script/navigate.js"></script>
<script>
	
	function process(e)
	{
		$.ajax({
		url: "http://localhost:3000/manager/order/done/"+e.parentElement.parentElement.childNodes[1].innerHTML,
		type: 'PUT',
		headers: {token : localStorage.getItem("token")}
		,
		success: function(data) {
				location.reload();
				}
				});
	}

	function detail(e)
	{
		window.location.replace("/manager/detail_bill/"+e.parentElement.parentElement.childNodes[1].innerHTML);
		
	}
	$.ajax({
		url: "http://localhost:3000/manager/api/order/pending",
		type: 'GET',
		headers: {token : localStorage.getItem("token")}
		,
		success: function(data) {
			console.log(data);
			var itm = document.getElementById("row");
			for (var i=0;i < data.data.length ;i++)
			{
			
			var total=0;
			
			$.ajax({
				async:false,
				url: "http://localhost:3000/manager/api/detailbill/"+data.data[i].id,
				type: 'GET',
				headers: {token : localStorage.getItem("token")}
				,
				
				success: function(data2) {
					console.log(data2);
					total=0;
					for (var j=0;j<data2.data.length;j++)
					{
						total+= parseInt(data2.data[j].total)*parseInt(data2.data[j].price);
					
					}
					//console.log(t);
				}
				});
			
			console.log(data);
			
			var cln = itm.cloneNode(true);
			cln.style.visibility="visible";
			cln.style.height="50px";
			cln.childNodes[1].innerHTML=data.data[i].id;
			var t=new Date(data.data[i].date);
			cln.childNodes[3].innerHTML=t.toDateString();
			cln.childNodes[5].innerHTML=data.data[i].address;
			cln.childNodes[7].innerHTML= total;
				
			document.getElementById("row").parentElement.appendChild(cln);
			}
			itm.parentElement.removeChild(itm.parentElement.childNodes[1]);
			}
		});
	
	function sortbyday()
	{
		var arr=document.getElementById("tb").childNodes;
	
		for (var i=2;i<arr.length-1;i++)
		{
			
			for (var j=i+1;j<arr.length;j++)
			{
				var d1=new Date(arr[i].childNodes[3].innerHTML);
				var d2=new Date(arr[j].childNodes[3].innerHTML);
				if(d1>d2)	
					arr[i].before(arr[j]);
			}
		}
			
	}
	
	function sortbytotal()
	{
		var arr=document.getElementById("tb").childNodes;
	
		for (var i=2;i<arr.length-1;i++)
		{
			
			for (var j=i+1;j<arr.length;j++)
			{
				var d1=arr[i].childNodes[7].innerHTML;
				var d2=arr[j].childNodes[7].innerHTML;
				if(d1>d2)	
					arr[i].before(arr[j]);
			}
		}
			
	}
	
	function sort(e)	
	{
		var str= document.getElementById("sortby").value;
		if (str=="1")
			sortbyday();
		if (str=="2")
			sortbytotal();
			
		
	}
	
	
</script>
</body>	
</html>